{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": "./src",
  },
  "include": ["src/**/*.ts", "@types"],
  "path": {
    "@/*": ["src/*"]
  },
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts"]
}
