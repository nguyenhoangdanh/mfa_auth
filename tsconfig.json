{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir": "dist"
  },
  "include": ["src/**/*.ts", "@types"],
  "path": {
    "@/*": ["src/*"]
  },
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts"]
}
